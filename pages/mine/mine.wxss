.mine{
  width: 100%;
  font-size: 18px;
}
.user_info{
  width: 100%;
  position: relative;
  height: 500rpx;
}
.user_info image{
  width: 100%;
  height: 100%;
  opacity: .5;
  position: absolute;
  z-index: -1;
}
.avatar{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 30px;
  left: calc((100% - 100px) / 2);
}
.user{
  position: absolute;
  width: 100%;
  top: 140px;
  text-align: center;
}
.contList{
  margin-top: 60px;
}
.weui-cell__bd{
  position: relative;
}
.weui-cell__bd image{
  width: 15px;
  position: absolute;
  top: 6px;
  height: 15px;
}
.weui-cell__bd text {
  margin-left: 20px;
}